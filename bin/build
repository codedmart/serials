#!/bin/bash
set -e

echo "
== BUILD ==================="
version=$(git log -1 --format="%h | %ad | %an | %s")
echo $version
echo $version > web/version.txt

echo "
-- npm -------------------"
npm install

echo "
-- flow ------------------"
flow --version
flow

echo "
-- webpack ------------------"
cd web && webpack -p && cd ..

echo "
-- docker ------------------"
docker build -t seanhess/serials .
# push as a separate command!
# docker push seanhess/serials


